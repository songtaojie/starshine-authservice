@using IdentityServer4.Extensions
@{
    string name = Context.User?.GetDisplayName();
}

<el-header class="hx-navbar hx-justify-content-end" style="height:3.5rem;">
    <el-dropdown type="primary" size="medium" @@command="handleCommand" trigger="click">
        <el-button>设置 - @name<i class="el-icon-arrow-down el-icon--right"></i></el-button>
        <el-dropdown-menu slot="dropdown" style="min-width: 8rem;">
            <el-dropdown-item command="/account/users">用户</el-dropdown-item>
            <el-dropdown-item command="/oauth2/logout">注销</el-dropdown-item>
        </el-dropdown-menu>
    </el-dropdown>
</el-header>