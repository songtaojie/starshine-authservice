# FROM mcr.microsoft.com/dotnet/aspnet:3.1 AS base
FROM registry.cn-hangzhou.aliyuncs.com/songtaojie/aspnet:3.1 AS base
WORKDIR /app
EXPOSE 5002
ENV LANG zh_CN.UTF-8  
ENV LANGUAGE zh_CN.UTF-8 
ENV LC_ALL zh_CN.UTF-8  

#FROM mcr.microsoft.com/dotnet/sdk:3.1 AS build
FROM registry.cn-hangzhou.aliyuncs.com/songtaojie/dotnet_sdk:3.1 AS build
WORKDIR /src
COPY ["Starshine.Authservice.Web/Starshine.Authservice.Web.csproj", "Starshine.Authservice.Web/"]
COPY ["Starshine.Authservice.Web.Extensions/Starshine.Authservice.Web.Extensions.csproj", "Starshine.Authservice.Web.Extensions/"]
COPY ["Starshine.Authservice.Web.Model/Starshine.Authservice.Web.Model.csproj", "Starshine.Authservice.Web.Model/"]
COPY ["Starshine.Authservice.Web.Common/Starshine.Authservice.Web.Common.csproj", "Starshine.Authservice.Web.Common/"]
RUN dotnet restore "Starshine.Authservice.Web/Starshine.Authservice.Web.csproj"
COPY . .
WORKDIR "/src/Starshine.Authservice.Web"
RUN dotnet build "Starshine.Authservice.Web.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "Starshine.Authservice.Web.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Starshine.Authservice.Web.dll"]